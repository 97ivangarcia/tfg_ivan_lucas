<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.keycraftapp.view.controller.LoginViewController"
      alignment="CENTER" spacing="12" padding="20">
    <Label text="KeyCraft – Iniciar sesión" style="-fx-font-size: 18px;"/>
    <TextField fx:id="emailField" promptText="Correo electrónico"/>
    <PasswordField fx:id="passwordField" promptText="Contraseña"/>
    <Label fx:id="errorLabel" textFill="red"/>
    <Button text="Entrar" onAction="#onLogin"/>
</VBox>
